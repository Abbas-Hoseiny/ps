---
import '../styles/base.css';
import '../styles/layout.css';
import '../styles/components.css';
import previewAsset from '../assets/img/preview.png';
import { getImage } from 'astro:assets';

interface Props {
  title?: string;
  description?: string;
}

const baseTitle = 'Peter Stader Pflanzenschutz';
const {
  title: pageTitle = 'Pflanzenschutz',
  description =
    'Digitale Berechnung und Dokumentation von Pflanzenschutz-Anwendungen für Peter Stader Jungpflanzen GmbH.',
} = Astro.props as Props;
const fullTitle = `${pageTitle} · ${baseTitle}`;
const canonicalUrl = Astro.url?.href ??
  (Astro.site ? new URL(Astro.site).href : 'https://abbas-hoseiny.github.io/ps/');
const {
  src: previewImageUrl,
  attributes: previewImageAttributes,
} = await getImage({
  src: previewAsset,
  width: 1200,
  height: 630,
  format: 'png',
  quality: 90,
  fit: 'cover',
});
const previewImageWidth = previewImageAttributes.width ?? 1200;
const previewImageHeight = previewImageAttributes.height ?? 630;
---

<!DOCTYPE html>
<html lang="de" data-bs-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{fullTitle}</title>
  <link rel="canonical" href={canonicalUrl} />
  <meta name="description" content={description} />
  <meta property="og:site_name" content={baseTitle} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={previewImageUrl} />
  <meta property="og:image:width" content={previewImageWidth.toString()} />
  <meta property="og:image:height" content={previewImageHeight.toString()} />
  <meta property="og:image:alt" content="Peter Stader Pflanzenschutz App" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={previewImageUrl} />
  <meta name="twitter:image:alt" content="Peter Stader Pflanzenschutz App" />
  <link rel="icon" type="image/png" href="/ps/assets/img/logo-peter-stader.png" />
  <link rel="shortcut icon" href="/ps/assets/img/logo-peter-stader.png" />
  <link rel="apple-touch-icon" href="/ps/assets/img/logo-peter-stader.png" />
  
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
</head>
<body class="bg-startup">
  <noscript>
    <div class="noscript-warning">
      Diese Anwendung benötigt JavaScript.
    </div>
  </noscript>
  
  <div id="app-root" class="app-root">
    <slot />
  </div>
  
  <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
